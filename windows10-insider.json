{
    "variables": {
        "name":       "windows10-insider",
        "iso_path":   "iso/Windows10_InsiderPreview_Client_x64_de-de_14393.iso",
        "iso_sha256": "464ace5a4d1922b290d7d1fc13e95b7fd380bda11dda9fbd6a6ff9067392c9fb"
    },
    "builders": [
        {
            "type":                 "virtualbox-iso",
            "communicator":         "winrm",
            "disk_size":            61440,
            "floppy_files": [
                "Autounattend.xml",
                "update-windows.ps1",
                "enable-winrm.ps1"
            ],
            "guest_os_type":        "Windows10_64",
            "headless":             false,
            "iso_url":              "{{user `iso_path`}}",
            "iso_checksum_type":    "sha256",
            "iso_checksum":         "{{user `iso_sha256`}}",
            "winrm_username":       "vagrant",
            "winrm_password":       "vagrant",
            "winrm_timeout":        "6h",
            "shutdown_command":     "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
            "guest_additions_mode": "attach",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "1024"],
                ["modifyvm", "{{.Name}}", "--cpus",      "2"],
                ["modifyvm", "{{.Name}}", "--vram",     "32"]
            ]
        }
    ],
    "provisioners": [
        {
            "type": "windows-restart",
            "restart_timeout": "30m"
        },
        {
            "type": "powershell",
            "execute_command": "powershell -ExecutionPolicy Bypass \"& { {{.Vars}}{{.Path}}; exit $LastExitCode}\"",
            "scripts": [
                "enable-rdp.ps1",
                "guest-tools.ps1"
            ]
        },
        {
            "type": "windows-restart"
        },
        {
            "type": "powershell",
            "execute_command": "powershell -ExecutionPolicy Bypass \"& { {{.Vars}}{{.Path}}; exit $LastExitCode}\"",
            "scripts": [
                "final-tweaks.ps1"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "keep_input_artifact": false,
            "output": "builds/{{user `name`}}.{{.Provider}}.box"
        }
    ]
}
